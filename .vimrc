set bs=indent,eol,start
set fencs=ucs-bom,utf-8,gb18030,shift-jis,euc-jp,big5
set gfn=Fira\ Code:h16 gfw=Source\ Han\ Mono\ SC:h16
set ls=2
set mouse=a
set rtp+=/usr/local/lib/python3.7/site-packages/powerline/bindings/vim
set ru so=2
sy on
au FileType c,cpp,h,hpp setlocal ai et sts=4 sw=4 ts=8
au FileType css setlocal ai et sts=4 sw=4 ts=8
au FileType html setlocal ai et sts=2 sw=2 ts=8
au FileType java setlocal ai et sts=4 sw=4 ts=8
au FileType json,javascript setlocal ai et sts=4 sw=4 ts=8
au FileType md,markdown setlocal spell spelllang=en_us
au FileType modula2 setlocal ft=markdown
au FileType py,python setlocal ai et sts=4 sw=4 ts=8
au FileType rust setlocal ai et sts=4 sw=4 ts=8
au FileType s,asm setlocal noet sts=8 sw=8 ts=8
au FileType sh setlocal ai et sts=4 sw=4 ts=8
